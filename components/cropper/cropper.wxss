/* components/cropper/cropper.wxss */
.canvas-bg{ 
  width: 100%;
  height: 100%;
  background: #111;
  position: relative;
  transform: translateZ(0);
  overflow: hidden;
}
.originCanvas{  
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index:1;
}
.origin-cover-image{ 
  width: 50%;
  height: 50%; 
  position: absolute;
  left: 0;
  top: 0;
}
